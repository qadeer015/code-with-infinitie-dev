                    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                        <% if (!['/auth/login', '/auth/register', '/forgot-password', '/reset-password'].includes(url) && viewName !== 'index' && viewName !== 'terms' && viewName !== 'privacy') { %>
                            <%- include('_sidebar') %>
                        <% } %>
                </div>
            </div>
        </div>
    </nav>
    <% } %>
