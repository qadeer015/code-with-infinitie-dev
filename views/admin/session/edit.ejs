<%- include('../partials/_header', { title: 'Edit Session' }) %>

<h2>Edit Session</h2>

<form action="/users/admin/sessions/<%= session.id %>/update" method="POST" class="row g-3">
    <div class="col-md-6">
        <label class="form-label">Session Name</label>
        <input type="text" class="form-control" name="name" value="<%= session.name %>" required>
    </div>
    
    <div class="col-md-6">
        <label class="form-label">Description</label>
        <textarea class="form-control" name="description" required><%= session.description %></textarea>
    </div>
    
    <div class="col-md-3">
        <label class="form-label">Start Date</label>
        <input type="date" class="form-control" name="start_date" value="<%= session.start_date %>" required>
    </div>
    
    <div class="col-md-3">
        <label class="form-label">End Date</label>
        <input type="date" class="form-control" name="end_date" value="<%= session.end_date %>" required>
    </div>

    <div class="col-md-3">
        <select class="form-select" name="status" required>
            <option value="">Select Status</option>
            <option value="active" <%= session.status === 'active' ? 'selected' : '' %>>Active</option>
            <option value="upcoming" <%= session.status === 'upcoming' ? 'selected' : '' %>>Upcoming</option>
            <option value="completed" <%= session.status === 'completed' ? 'selected' : '' %>>Completed</option>
        </select>
    </div>

    
    <div class="col-12">
        <label class="form-label">Select Courses</label>
        <div class="row">
            <% courses.forEach(course => { %>
            <div class="col-md-4 mb-2">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="courses" value="<%= course.id %>" id="course<%= course.id %>">
                    <label class="form-check-label" for="course<%= course.id %>">
                        <%= course.title %>
                    </label>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
    
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Create Session</button>
        <a href="/sessions" class="btn btn-secondary">Cancel</a>
    </div>
</form>
<%- include('../partials/_footer') %>
