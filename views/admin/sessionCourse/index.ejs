<%- include('../partials/_header', { title: 'Session Courses' }) %>
    <div class="d-flex align-items-center justify-content-between">
        <h4 class="fw-bold pt-4 pb-1">Session Courses</h4>
        <a href="/admin/session-courses/new" class="btn btn-primary">New Session Course</a>
    </div>
 <!-- Difficulty Level Legend -->
<div class="d-flex align-items-center gap-4 mb-3">
  <span>
    <span class="badge rounded-pill bg-success">B</span> Beginner
  </span>
  <span>
    <span class="badge rounded-pill bg-warning text-dark">I</span> Intermediate
  </span>
  <span>
    <span class="badge rounded-pill bg-danger">A</span> Advanced
  </span>
</div>

    <div class="col-12 table-responsive min-vh-100">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>StartDate</th>
                    <th>EndDate</th>
                    <th>CreatedBy</th>
                    <th>Status</th>
                    <th>Courses</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="courses-data" class="table-group-divider">
            </tbody>
        </table>
    </div>

    <script>

        const coursesData = document.getElementById('courses-data');

        document.addEventListener("DOMContentLoaded", function () {
            fetchCourses();
        })

        function fetchCourses() {
            const response = fetch("/admin/session-courses/get-all", {
                method: "GET",
                headers: {
                    "Content-Type": "application/json",
                },
                cache: "no-cache",
            }).then(response => {
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                return response.json();
            }).then(data => {
                coursesData.innerHTML = '';
                data.forEach(session => {
                    coursesData.innerHTML += renderSessionDetails(session);
                });
            }).catch(error => {
                console.error("Error fetching courses:", error);
                coursesData.innerHTML = `
                    <div class="error-message">
                        <p>Failed to load courses. Please try again later.</p>
                    </div>
                `;
            });
        }


        function renderSessionDetails(session) {
            return `
                <tr>
                    <td>${session.name}</td>
                    <td>${session.description}</td>
                    <td>${session.start_date}</td>
                    <td>${session.end_date}</td>
                    <td>${session.created_by_name}</td>
                    <td> <span class="badge ${session.status === 'active' ? 'bg-success' : 'bg-danger'}"> ${session.status} </span></td>
                    <td><div class="d-flex flex-wrap gap-3">${session.courses.map(course => `<span class="badge bg-primary position-relative">${course.title}<span class="position-absolute top-0 start-100 translate-middle badge rounded-pill ${course.difficulty_lvl === 'beginner' ? 'bg-success' : course.difficulty_lvl === 'intermediate' ? 'bg-warning' : 'bg-danger'} z-2">${course.difficulty_lvl ? course.difficulty_lvl[0].toUpperCase() : ''}</span></span>`).join(' ')}</div></td>
                    <td>
                         <div class="dropdown">
                            <button class="bg-transparent rounded-circle border-1 border-muted px-1 outline-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-three-dots-vertical"></i>
                            </button>
                            <ul class="dropdown-menu">
                                <a class="text-decoration-none text-dark" href="/admin/session-courses/${session.id}/edit">
                                <li class="dropdown-item mb-1">
                                    <i class="bi bi-pencil"></i>
                                    Edit
                                </li>
                                </a>
                                <li class="dropdown-item mb-1">
                                    <form action="/admin/session-courses/${session.id}/delete" method="post" onsubmit="return confirm('Are you sure you want to delete this session?')">
                                        <button class="w-100 text-start bg-transparent border-0 outline-0" type="submit">
                                            <i class="bi bi-trash"></i>
                                            Delete
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
            `;
        }
    </script>
    <%- include('../partials/_footer') %>