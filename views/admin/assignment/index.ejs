<%- include('../partials/_header', { title: 'Assignments' }) %>
    <div class="d-flex align-items-center justify-content-between">
        <h4 class="fw-bold pt-4 pb-1">Assignments</h4>
        <a href="/admin/assignments/new" class="btn btn-primary">New Assignment</a>
    </div>
    <div class="row pb-5">
        <div class="col-12 table-responsive min-vh-100">
            <table class="table" style="border: 1px solid; border-collapse: collapse">
                <thead>
                    <tr>
                        <th scope="col">Title</th>
                        <th scope="col">Course</th>
                        <th scope="col">Marks</th>
                        <th scope="col">Details</th>
                        <th scope="col">OpenDate</th>
                        <th scope="col">DueDate</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody id="assignments-data" class="table-group-divider">
                    <!-- assignment details will go here -->
                </tbody>
            </table>
        </div>
    </div>
    <script>

        const assignmentsData = document.getElementById('assignments-data');

        document.addEventListener("DOMContentLoaded", function () {
            fetchCourses();
        })

        function fetchCourses() {
            const response = fetch("/admin/assignments/get-all", {
                method: "GET",
                headers: {
                    "Content-Type": "application/json",
                },
                cache: "no-cache",
            }).then(response => {
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                return response.json();
            }).then(data => {
                assignmentsData.innerHTML = '';
                data.forEach(assignment => {
                    assignmentsData.innerHTML += renderAssignments(assignment);
                });
            }).catch(error => {
                console.error("Error fetching assignments:", error);
                assignmentsData.innerHTML = `
                    <div class="error-message">
                        <p>Failed to load assignments. Please try again later.</p>
                    </div>
                `;
            });
        }


        function renderAssignments(assignment) {
            return `
                <tr>
                    <td>${assignment.title}</td>
                    <td>${assignment.course_title}</td>
                    <td>${assignment.total_marks}</td>
                    <td>${assignment.details}</td>
                    <td>${assignment.open_date}</td>
                    <td>${assignment.due_date}</td>
                    <td>
                        <div class="dropdown">
                            <button class="bg-transparent rounded-circle border-1 border-muted px-1 outline-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-three-dots-vertical"></i>
                            </button>
                            <ul class="dropdown-menu">
                                <a class="text-decoration-none text-dark" href="/admin/assignments/${assignment.id}/edit">
                                <li class="dropdown-item mb-1">
                                    <i class="bi bi-pencil"></i>
                                    Edit
                                </li>
                                </a>
                                <li class="dropdown-item mb-1">
                                    <form action="/admin/assignments/${assignment.id}/delete" method="post" onsubmit="return confirm('Are you sure you want to delete this assignment?')">
                                        <i class="bi bi-trash"></i>
                                        <input type="submit" class="w-100 text-start bg-transparent border-0 outline-0" value="Delete">
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
            `;
        }
    </script>
    <%- include('../partials/_footer') %>