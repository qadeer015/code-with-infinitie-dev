<%- include('../partials/_header', { title: 'Featured Courses' }) %>
    <div class="d-flex align-items-center justify-content-between">
        <h4 class="fw-bold pt-4 pb-1">Featured Courses</h4>
        <a href="/users/admin/featured-courses/new" class="btn btn-primary">New Featured Course</a>
    </div>
    <div class="col-12 table-responsive min-vh-100">
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Difficulty</th>
                    <th>Duration</th>
                    <th>Fee</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="courses-data" class="table-group-divider">
            </tbody>
        </table>
    </div>

    <script>

        const coursesData = document.getElementById('courses-data');

        document.addEventListener("DOMContentLoaded", function () {
            fetchCourses();
        })

        function fetchCourses() {
            const response = fetch("/users/admin/featured-courses/get-all", {
                method: "GET",
                headers: {
                    "Content-Type": "application/json",
                },
                cache: "no-cache",
            }).then(response => {
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                return response.json();
            }).then(data => {
                coursesData.innerHTML = '';
                console.log(data);
                data.forEach(course => {
                    coursesData.innerHTML += renderCourses(course);
                });
            }).catch(error => {
                console.error("Error fetching courses:", error);
                coursesData.innerHTML = `
                    <div class="error-message">
                        <p>Failed to load courses. Please try again later.</p>
                    </div>
                `;
            });
        }


        function renderCourses(course) {
            return `
                <tr>
                    <td>${course.title}</td>
                    <td>${course.description}</td>
                    <td>${course.difficulty_lvl}</td>
                    <td>${course.course_duration}</td>
                    <td>${course.course_fee}</td>
                    <td> <span class="badge ${course.status === 'active' ? 'bg-success' : 'bg-danger'}"> ${course.status} </span></td>
                    <td>
                         <div class="dropdown">
                            <button class="bg-transparent rounded-circle border-1 border-muted px-1 outline-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-three-dots-vertical"></i>
                            </button>
                            <ul class="dropdown-menu">
                                <a class="text-decoration-none text-dark" href="/users/admin/featured-courses/${course.id}/edit">
                                <li class="dropdown-item mb-1">
                                    <i class="bi bi-pencil"></i>
                                    Edit
                                </li>
                                </a>
                                <li class="dropdown-item mb-1">
                                    <form action="/users/admin/featured-courses/${course.id}/delete" method="post" onsubmit="return confirm('Are you sure you want to delete this course?')">
                                        <button class="w-100 text-start bg-transparent border-0 outline-0" type="submit">
                                            <i class="bi bi-trash"></i>
                                            Delete
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
            `;
        }
    </script>
    <%- include('../partials/_footer') %>