
<%- include('partials/_header', { title: 'Courses' }) %>

  <div class="row">
    <div class="col-lg-8 col-md-9 col-10 py-3">
      <h2 class="fw-bold">Courses <span class="text-muted" style="font-size: 16px;">(<%= currentSession.name %>)</span></h2>
      <p class="text-muted">Improve your web development skills in a variety of languages and frameworks, including HTML, CSS, JavaScript.</p>
    </div>
    <hr class="m-0 text-muted mb-3">
  </div>
  
  <div class="row g-4">
    <% if (courses.length > 0) { %>
    <% courses.forEach((course) => { %>
    <div class="col-lg-4 col-md-6">
        <div class="card h-100 shadow-sm bg-primary">
            <div class="card-body position-relative">
                <h5 class="card-title fw-bold text-white"><%= course.title %></h5>
                <p class="card-text text-muted" style="font-size: 15px; line-height: 1.5; display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden;">
                    <%= course.description %>
                </p>
            </div>
            <div class="card-footer bg-transparent border-top-0">
                <div class="d-flex justify-content-between align-items-end">
                  <div>
                    <div class="badge p-0">
                        <i class="bi bi-hourglass"></i>
                        <%= course.course_duration %>
                    </div>
                    <div class="badge p-0">
                      <i class="bi bi-currency-dollar"></i>
                      <%= course.course_fee %>
                    </div>
                    <div class="text-warning">
                      <% for (let i = 0; i < 5; i++) { %>
                          <% if (i < course.ratting) { %>
                              ★
                          <% } else { %>
                              ☆
                          <% } %>
                      <% } %>
                      <span class="text-muted ms-1">(124)</span>
                    </div>
                  </div>
                  <div>
                  <% if (course.user_course_status != 'enrolled' && course.user_course_status != 'completed') { %>
                    <form id="enroll-form-<%= course.id %>" action="/courses/<%= course.id %>/join" method="post" class="text-center">
                        <input type="hidden" name="user_id" value="<%= user.id %>">
                        <input type="hidden" name="course_id" value="<%= course.id %>">
                        <button type="submit" class="btn btn-sm btn-success">Enroll</button>
                    </form>
                  <% } %>
                  <% if (course.user_course_status === 'enrolled' || course.user_course_status === 'completed') { %>
                      <span class="badge bg-secondary p-2">Enrolled</span>
                  <% } %>
                  </div>
                </div>
            </div>
        </div>
    </div>
    <% }); %>
    <% } else { %>
      <div class="col-12">
        <div class="alert alert-info" role="alert">
          No courses found for now. Please wait for new session to start.
        </div>
      </div>
    <% } %>
  </div>

  <script>
  const enrollForms = document.querySelectorAll('form[id^="enroll-form-"]');
  enrollForms.forEach(form => {
    form.addEventListener('submit', async function (event) {
      event.preventDefault(); // Prevent full-page reload

      const formId = this.id;
      const courseId = formId.split('-')[2]; // Extract course ID from form ID
      const submitButton = this.querySelector('button[type="submit"]');

      try {
        const response = await fetch(this.action, {
          method: 'POST',
          headers: { 
            'Content-Type': 'application/json',
            'Accept': 'application/json'
          },
          body: JSON.stringify({
            user_id: this.querySelector('input[name="user_id"]').value,
            course_id: this.querySelector('input[name="course_id"]').value
          })
        });

        const data = await response.json();

        if (data.success) {
          showAlert(data.message, 'success');
          
          // Replace the form with the "Enrolled" badge
          const formContainer = this.closest('div');
          formContainer.innerHTML = '<span class="badge bg-secondary p-2">Enrolled</span>';
          
        } else {
          showAlert(data.message, 'danger');
        }
      } catch (error) {
        console.error('Error:', error);
        showAlert('An error occurred. Please try again.', 'danger');
      }
    });
  });
</script>

<%- include('partials/_footer') %>